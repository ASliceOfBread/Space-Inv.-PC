 LOAD ALGORITHM 
 
 /MENU
Make menu visible
Make instructions visible
Make start button visible

Timer = zero

/POSITIONING
    /SHIELDS
    Position shields
    Make shields visible
    /PLAYER
    Position Player
    Make player visible

WHEN  START BUTTON CLICKED

/GENERATE ENEMIES
    Position enemy placeholders
    Use spawn script to generate enemy types
    Use classes to define enemy properties

/HIDE INSTRUCTIONS
    Hide instructions

/ENABLE USER CONTROLS
    WHILE UserControlsEnabled = TRUE
        When LEFT ARROW pressed:
            MoveLeft()
        When RIGHT ARROW pressed:
            MoveRight()
        When SPACEBAR pressed
            FireLaser()
    LOOP

GAMEPLAY

/MOVEMENT
    /PLAYER
SUBROUTINE MoveLeft():
    IF NOT touching boundary:
        Move player left
    END IF
END SUBROUTINE

SUBROUTINE MoveRight():
    IF NOT touching boundary:
        Move player right
    END IF
END SUBROUTINE

    /ENEMIES
        WHILE Alive = TRUE:
            after random time, move enemy by Speed
        LOOP

        IF touching boundary:
            Move enemy down a row
            Speed = Speed * -1
        END IF
 
 /LASERS
     /PLAYER
     SUBROUTINE FireLaser():
         Laser.X = Enemy.X
         Laser.Y = Enemy.Y
         Move laser up
         IF touching enemy
             EnemyDamage(EnemyID)
             IF there are no enemies left:
                 Move onto next level
             END IF
         END IF
     END SUBROUTINE
     
     /ENEMIES
     After random time + Delay, EnemyFireLaser(Enemy(x).Type)
     
     SUBROUTINE EnemyFireLaser(Type):
        IF Type = "NORMAL"
            Laser.X = Enemy.X
            Laser.Y = Enemy.Y
            Laser.IsVisible = TRUE
            REPEAT UNTIL touching shield OR touching player OR touching floor:
                Move laser by Speed
            REPEAT
            IF touching player:
                PlayerHit()
            ELSE IF touching shield:
                ShieldDamage(Lasertip.X, Lasertip.Y)
            ELSE IF touching ground:
                Laser.IsVisible = FALSE
        ELSE IF Type = "RAPID":
            Laser.X = Enemy.X
            Laser.Y = Enemy.Y
            Laser.IsVisible = TRUE
            REPEAT UNTIL touching shield OR touching player OR touching floor:
                Move laser by speed
            REPEAT
            IF touching player:
                PlayerHit()
            ELSE IF touching shield:
                ShieldDamage(Lasertip.X, Lasertip.Y)
            ELSE IF touching ground:
                Laser.IsVisible = FALSE
            Wait random 0.5 to 1
            EnemyFireLaser("RAPID")
        ELSE IF Type = "INSTANT"
            Laser.X = Enemy.X
            Laser.Y = Enemy.Y
            Laser.IsVisible = TRUE
            REPEAT UNTIL touching shield OR touching player OR touching floor:
                LaserHeight = LaserHeight + 1
            REPEAT
            IF touching player:
                PlayerHit()
            ELSE IF touching shield:
                ShieldDamage(Lasertip.X, Lasertip.Y)
            ELSE IF touching ground:
                Laser.IsVisible = FALSE
                LaserHeight = DefaultLaserHeight
        ELSE IF Type = "SPLASH":
             Laser.X = Enemy.X
             Laser.Y = Enemy.Y
             Laser.IsVisible = TRUE
             REPEAT UNTIL touching shield OR touching player OR touching floor:
                 Move laser by speed
             REPEAT
             SplashDamage(Laser.X, Laser.Y)
             Laser.IsVisible = FALSE
         END IF
     SUBROUTINE SplashDamage(X,Y)
         Set shockwave sprite size to default
         Place shockwave sprite at X,Y
         shockwave.IsVisible = TRUE
         REPEAT UNTIl shockwave.Size = SplashRadius
         shockwave size = shockwave size + 1
         IF touching player THEN
             PlayerHit()
             shockwave.IsVisible = FALSE
             shockwave.Size = SplashRadius
         END IF
         REPEAT
     END SUBROUTINE
     
